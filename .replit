modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NestJS API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin Panel"

[[workflows.workflow]]
name = "NestJS API Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx nest start --watch"
waitForPort = 5005

[[workflows.workflow]]
name = "Admin Panel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd admin && npm run dev"
waitForPort = 3000

[deployment]
run = ["sh", "-c", "npm install && npx nest start --watch"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5005
externalPort = 80
